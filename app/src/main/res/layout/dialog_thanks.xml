<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_gravity="bottom">


        <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:foreground="@drawable/ripple"
                android:padding="@dimen/duplex"
                android:src="@drawable/ic_close_black"
                tools:ignore="UnusedAttribute,VectorDrawableCompat" />


            <TextView
                fontPath="fonts/CircularStd-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Thank you for using Feenix"
                android:textColor="@color/black"
                android:textSize="@dimen/primary_txt"
                tools:ignore="HardcodedText,MissingPrefix" />

        </LinearLayout>

        <View
            android:id="@+id/view_layout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#16191C1A" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/primary"
            android:layout_marginStart="@dimen/primary"
            android:layout_marginEnd="@dimen/primary"
            android:layout_marginBottom="@dimen/primary"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="238dp"
                android:layout_height="168dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/medium"
                app:srcCompat="@drawable/ic_invite_logo"
                tools:ignore="ContentDescription" />


            <TextView
                fontPath="fonts/CircularStd-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/primary"
                android:text="Invite your friends to Feenix!"
                android:textColor="@color/slide_text_color"
                android:textSize="@dimen/primary_txt"
                tools:ignore="HardcodedText,MissingPrefix" />

            <TextView
                fontPath="fonts/Graphik-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/primary"
                android:text="Share code with your friends and earn rewards when they join."
                android:textColor="@color/in_text_color"
                android:textSize="@dimen/default_txt1"
                android:textStyle="bold"
                tools:ignore="HardcodedText,MissingPrefix" />


            <LinearLayout
                android:id="@+id/layour_promocodes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal"
                android:background="@drawable/dotted_line_rectangle"
                android:orientation="horizontal"
                android:padding="@dimen/lite"
                android:weightSum="2">

                <TextView
                    android:id="@+id/referralCode"
                    fontPath="fonts/Graphik-Regular.ttf"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.3"
                    android:background="@android:color/transparent"
                    android:hint="@string/reference_code"
                    android:padding="@dimen/primary"
                    android:textColor="@color/black"
                    android:textColorHint="#919191"
                    android:textSize="@dimen/default_txt"
                    tools:ignore="Autofill,HardcodedText,MissingPrefix" />

                <Button
                    android:id="@+id/btn_copy"
                    fontPath="fonts/CircularStd-Bold.ttf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/lite"
                    android:layout_weight="0.7"
                    android:background="@null"
                    android:padding="@dimen/lite"
                    android:text="copy code"
                    android:textAllCaps="true"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/default_txt1"
                    tools:ignore="HardcodedText,MissingPrefix" />

            </LinearLayout>

            <Button
                android:id="@+id/shareThanks"
                fontPath="fonts/CircularStd-Medium.ttf"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/primary"
                android:layout_marginTop="@dimen/secondary"
                android:layout_marginEnd="@dimen/primary"
                android:layout_marginBottom="@dimen/primary"
                android:background="@drawable/bg_rect_primary"
                android:text="Share"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/primary_txt1"
                tools:ignore="HardcodedText,MissingPrefix" />

            <TextView
                android:id="@+id/dissmiss"
                fontPath="fonts/CircularStd-Bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/primary"
                android:layout_marginEnd="@dimen/primary"
                android:layout_marginBottom="@dimen/primary"
                android:gravity="center"
                android:padding="@dimen/lite"
                android:text="Later"
                android:textColor="@color/primary"
                android:textSize="@dimen/primary_txt"
                tools:ignore="HardcodedText,MissingPrefix" />


        </LinearLayout>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
