<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_after_sos"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/medium"
                app:srcCompat="@drawable/ic_sos_logo"
                tools:ignore="ContentDescription" />


            <TextView
                fontPath="fonts/CircularStd-Bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/secondary"
                android:gravity="center"
                android:text="Use an Emergency alert"
                android:textColor="@color/slide_text_color"
                android:textSize="@dimen/secondary_txt"
                android:textStyle="bold"
                tools:ignore="HardcodedText,MissingPrefix" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/duplex"
                android:background="#f2f2f2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_after_sos_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/primary"
                    android:layout_marginStart="@dimen/duplex"
                    android:layout_marginTop="@dimen/normal"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_call_sos"
                        tools:ignore="VectorDrawableCompat" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/normal"
                        android:layout_marginStart="@dimen/normal"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txt_get_help"
                                fontPath="fonts/CircularStd-Bold.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/mini"
                                android:singleLine="true"
                                android:text="Get Help"
                                android:textColor="@color/sos_red"
                                android:textSize="@dimen/default_txt1"
                                tools:ignore="HardcodedText,MissingPrefix" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_username"
                            fontPath="fonts/Graphik-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="@dimen/lite"
                            android:layout_marginTop="@dimen/mini"
                            android:padding="@dimen/lite"
                            android:text="You will get help from the feenix safety team"
                            android:textColor="@color/editTextColor"
                            android:textSize="@dimen/small_txt"
                            tools:ignore="HardcodedText,MissingPrefix" />


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/extra_lite"
                    android:background="#f2f2f2" />

                <LinearLayout
                    android:id="@+id/layout_after_sos_messgae"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/primary"
                    android:layout_marginStart="@dimen/duplex"
                    android:layout_marginTop="@dimen/normal"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/img_after_sms_send"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_sos_create_alert"
                        tools:ignore="VectorDrawableCompat" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:layout_marginEnd="@dimen/normal"
                        android:layout_marginStart="@dimen/normal"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                fontPath="fonts/CircularStd-Bold.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/mini"
                                android:singleLine="true"
                                android:text="Alert your emergency contacts"
                                android:textColor="@color/sos_red"
                                android:textSize="@dimen/default_txt1"
                                tools:ignore="HardcodedText,MissingPrefix" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_message_sent"
                            fontPath="fonts/Graphik-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="@dimen/lite"
                            android:layout_marginTop="@dimen/mini"
                            android:padding="@dimen/lite"
                            android:text="Ride info will be shared via SMS"
                            android:textColor="@color/editTextColor"
                            android:textSize="@dimen/small_txt"
                            tools:ignore="HardcodedText,MissingPrefix" />


                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/extra_lite"
                    android:background="#f2f2f2" />


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/primary"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/layout_close_sos"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginEnd="@dimen/secondary"
                android:layout_marginStart="@dimen/secondary"
                android:layout_marginTop="@dimen/secondary"
                android:background="@drawable/bg_rect_primary"
                android:gravity="center">


                <TextView
                    fontPath="fonts/CircularStd-Medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Close"
                    android:textAllCaps="false"
                    android:textColor="@color/sos_txt"
                    android:textSize="@dimen/primary_txt1"
                    tools:ignore="HardcodedText,MissingPrefix" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>