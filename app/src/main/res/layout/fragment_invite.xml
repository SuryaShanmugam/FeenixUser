<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/primary"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/medium"
                app:srcCompat="@drawable/ic_invite_logo"
                tools:ignore="ContentDescription" />


            <TextView
                fontPath="fonts/CircularStd-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/primary"
                android:text="Invite your friends to Feenix!"
                android:textColor="@color/slide_text_color"
                android:textSize="@dimen/primary_txt"
                tools:ignore="HardcodedText,MissingPrefix" />

            <TextView
                fontPath="fonts/Graphik-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/primary"
                android:text="Share code with your friends and earn rewards when they join."
                android:textColor="@color/in_text_color"
                android:textSize="@dimen/default_txt1"
                android:textStyle="bold"
                tools:ignore="HardcodedText,MissingPrefix" />


            <LinearLayout
                android:id="@+id/layour_promocodes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal"
                android:background="@drawable/dotted_line_rectangle"
                android:orientation="horizontal"
                android:padding="@dimen/lite"
                android:weightSum="2">

                <TextView
                    android:id="@+id/referralCode"
                    fontPath="fonts/Graphik-Regular.ttf"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.3"
                    android:background="@android:color/transparent"
                    android:hint="@string/reference_code"
                    android:padding="@dimen/primary"
                    android:textColor="@color/black"
                    android:textColorHint="#919191"
                    android:textSize="@dimen/default_txt"
                    tools:ignore="Autofill,HardcodedText,MissingPrefix" />

                <Button
                    android:id="@+id/btn_copy"
                    fontPath="fonts/CircularStd-Bold.ttf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/lite"
                    android:layout_weight="0.7"
                    android:background="@null"
                    android:padding="@dimen/lite"
                    android:text="copy code"
                    android:textAllCaps="true"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/default_txt1"
                    tools:ignore="HardcodedText,MissingPrefix" />

            </LinearLayout>


            <TextView
                fontPath="fonts/CircularStd-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/primary"
                android:text="Invite Now"
                android:textColor="@color/slide_text_color"
                android:textSize="@dimen/primary_txt"
                tools:ignore="HardcodedText,MissingPrefix" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/secondary"
                android:weightSum="4">

                <LinearLayout
                    android:id="@+id/whatsappShare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/duplex"
                        app:srcCompat="@drawable/ic_inivte_whatsapp"
                        tools:ignore="ContentDescription" />

                    <TextView
                        fontPath="fonts/Graphik-Regular.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/primary"
                        android:gravity="center"
                        android:text="Whatsapp"
                        android:textAllCaps="true"
                        android:textColor="@color/in_text_color"
                        android:textSize="@dimen/small_txt11"
                        tools:ignore="HardcodedText,MissingPrefix" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/fbShare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/duplex"
                        app:srcCompat="@drawable/ic_invite_faceboook"
                        tools:ignore="ContentDescription" />

                    <TextView
                        fontPath="fonts/Graphik-Regular.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/primary"
                        android:gravity="center"
                        android:text="Facebook"
                        android:textAllCaps="true"
                        android:textColor="@color/in_text_color"
                        android:textSize="@dimen/small_txt11"
                        tools:ignore="HardcodedText,MissingPrefix" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Instashare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/duplex"
                        app:srcCompat="@drawable/ic_invite_instagram"
                        tools:ignore="ContentDescription" />

                    <TextView
                        fontPath="fonts/Graphik-Regular.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/primary"
                        android:gravity="center"
                        android:text="Instagram"
                        android:textAllCaps="true"
                        android:textColor="@color/in_text_color"
                        android:textSize="@dimen/small_txt11"
                        tools:ignore="HardcodedText,MissingPrefix" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_more"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="@dimen/lite"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/extra_lite">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="@dimen/duplex"
                            app:srcCompat="@drawable/ic_invite_more"
                            tools:ignore="ContentDescription" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        fontPath="fonts/Graphik-Regular.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/primary"
                        android:gravity="center"
                        android:text="More"
                        android:textAllCaps="true"
                        android:textColor="@color/in_text_color"
                        android:textSize="@dimen/small_txt11"
                        tools:ignore="HardcodedText,MissingPrefix" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                fontPath="fonts/CircularStd-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/secondary"
                android:text="Did someone refer you to Feenix?"
                android:textColor="@color/slide_text_color"
                android:textSize="@dimen/primary_txt"
                tools:ignore="HardcodedText,MissingPrefix" />

            <TextView
                fontPath="fonts/Graphik-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/primary"
                android:text="Enter their referral code to earn rewards"
                android:textColor="@color/in_text_color"
                android:textSize="@dimen/default_txt1"
                android:textStyle="bold"
                tools:ignore="HardcodedText,MissingPrefix" />


            <LinearLayout
                android:id="@+id/layout_apply_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/primary"
                android:background="@drawable/dotted_line_rectangle"
                android:orientation="horizontal"
                android:padding="@dimen/lite"
                android:weightSum="2">

                <EditText
                    android:id="@+id/edit_referal_code"
                    fontPath="fonts/Graphik-Regular.ttf"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:background="@android:color/transparent"
                    android:hint="Enter  Code"
                    android:inputType="textCapCharacters"
                    android:padding="@dimen/normal"
                    android:textColor="@color/black"
                    android:textColorHint="#919191"
                    android:textSize="@dimen/default_txt"
                    tools:ignore="Autofill,HardcodedText,MissingPrefix" />

                <Button
                    android:id="@+id/btn_apply"
                    fontPath="fonts/CircularStd-Medium.ttf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/lite"
                    android:layout_weight="0.5"
                    android:background="@null"
                    android:padding="@dimen/lite"
                    android:text="APPLY"
                    android:textAllCaps="false"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/default_txt"
                    android:visibility="visible"
                    tools:ignore="HardcodedText,MissingPrefix" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_show_error"
                fontPath="fonts/Graphik-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/extra_lite"
                android:layout_marginBottom="@dimen/duplex"
                android:drawablePadding="@dimen/primary"
                android:padding="@dimen/lite"
                android:text=""
                android:textColor="#D93025"
                android:textSize="@dimen/default_txt"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_new_wallet_transaction_failed"
                tools:ignore="HardcodedText,MissingPrefix" />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>