<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/highlightedLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/primary"
    android:layout_marginTop="@dimen/extra_duplex"
    android:layout_marginEnd="@dimen/primary"
    android:layout_marginBottom="@dimen/mini"
    android:background="@drawable/bg_servicetype_unselected"
    android:orientation="vertical"
    android:visibility="visible"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="6dp"
    app:cardElevation="@dimen/extra_lite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/extra_duplex"
        android:layout_marginTop="@dimen/lite"
        android:layout_marginEnd="@dimen/extra_duplex"
        android:layout_marginBottom="@dimen/lite"
        android:orientation="vertical"
        android:paddingStart="@dimen/mini"
        android:paddingEnd="@dimen/mini">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/serviceTitle"
                    fontPath="fonts/CircularStd-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="@dimen/duplex"
                    android:padding="@dimen/mini"
                    android:text="shift"
                    android:textAllCaps="false"
                    android:textColor="#292000"
                    android:textSize="@dimen/default_txt1"
                    tools:ignore="MissingPrefix" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/normal11"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/serviceprice"
                        fontPath="fonts/CircularStd-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/mini"
                        android:textAllCaps="false"
                        android:textColor="#292000"
                        android:textSize="@dimen/default_txt1"
                        android:visibility="visible"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/service_seatCount"
                        fontPath="fonts/Graphik-Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/secondary"
                        android:drawableStart="@drawable/ic_service_type_seat_unselected"
                        android:drawablePadding="@dimen/duplex"
                        android:padding="@dimen/mini"
                        android:textAllCaps="false"
                        android:textColor="#919191"
                        android:textSize="@dimen/semismall_txt"
                        android:visibility="visible"
                        tools:ignore="MissingPrefix,UseCompatTextViewDrawableXml" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/extra_lite"
                android:layout_marginEnd="@dimen/lite"
                android:layout_weight="0.5"
                android:gravity="end"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/carImage2"
                    android:layout_width="72dp"
                    android:layout_height="34dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_cartype_economy"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txt_times"
                    fontPath="fonts/Graphik-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/lite"
                    android:layout_marginEnd="@dimen/extra_duplex"
                    android:padding="@dimen/mini"
                    android:text="8 mins"
                    android:textAllCaps="false"
                    android:textColor="#292000"
                    android:textSize="@dimen/small_txt11"
                    tools:ignore="HardcodedText,MissingPrefix" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

